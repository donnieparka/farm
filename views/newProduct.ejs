<% layout('boilerplate') -%>
<h1><%= farm.name %></h1>
<h3>aggiungi un nuovo prodotto</h3>
<form action="/farms/<%=farm._id%>/products" method="post">
	<input type="text" name="name" placeholder="product name" />
	<input type="text" name="price" placeholder="price" />
	<select name="category">
		<option value="figa">figa</option>
		<option value="fruit">fruit</option>
		<option value="vegetable">vegetable</option>
		<option value="troia">troia</option>
		<option value="culo">culo</option>
		<option value="cazzo">cazzo</option>
	</select>
	<button>submit</button>
	<br />
	<a href="/farms/<%=farm._id%>">Back to farm</a>
	<a href="/products">All products</a>
</form>
